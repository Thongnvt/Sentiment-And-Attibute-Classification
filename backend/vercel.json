{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxLambdaSize": "15mb",
                "buildCommand": "pip install -r requirements.txt",
                "includeFiles": [
                    "sentiment_analysis.py"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ],
    "env": {
        "NODE_VERSION": "18.x"
    }
}