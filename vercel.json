{
    "version": 2,
    "builds": [
        {
            "src": "backend/main.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxLambdaSize": "15mb"
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next",
            "config": {
                "buildCommand": "cd frontend && npm run build",
                "outputDirectory": "frontend/.next"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/main.py"
        },
        {
            "src": "/health",
            "dest": "/backend/main.py"
        },
        {
            "src": "/analyze",
            "dest": "/backend/main.py"
        },
        {
            "src": "/",
            "dest": "/frontend/index.html"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}